{
  "name": "eslint-config-everything",
  "version": "0.0.16",
  "description": "A fully featured, opinionated ESLint configuration.",
  "keywords": [
    "eslint",
    "prettier",
    "style guide"
  ],
  "license": "MIT",
  "author": "Nathan Drake <nathan@drakewest.dev>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "bump": "changeset version",
    "changeset": "changeset",
    "check-exports": "attw --pack .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "local-release": "dotenv -- changeset version && changeset publish",
    "release": "changeset publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "eslint": "^9.18.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.7",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "typescript-eslint": "^8.20.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@changesets/cli": "^2.27.11",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.6",
    "@vitest/coverage-v8": "^2.1.8",
    "jiti": "^2.4.2",
    "tsup": "^8.3.5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": "^20.11.0 || >=21.2.0"
  }
}
